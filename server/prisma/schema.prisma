generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        String @id @default(uuid())
  title     String
  bannerUrl String
  ads       Ad[]
}

model Ad {
  id              String   @id @default(uuid())
  name            String
  yearsPlaying    Int
  discord         String
  weekDays        Json
  hourStart       Int
  hourEnd         Int
  useVoiceChannel Boolean
  createAt        DateTime @default(now())

  game   Game   @relation(fields: [gameId], references: [id])
  gameId String
}
